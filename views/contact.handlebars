<h1>
  Контакты
</h1>

<form class="w-full max-w-lg m-auto mb-4" method="POST" action="/contact">
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-name">
        Имя
      </label>
    </div>
    <div class="md:w-2/3">
      <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-400" id="inline-name" name="name" type="text" value="Jane Doe" required>
    </div>
  </div>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-email">
        Электронная почта
      </label>
    </div>
    <div class="md:w-2/3">
      <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-400" id="inline-email" name="email" type="text" value="janedoe@gmail.com" required>
    </div>
  </div>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-message">
        Сообщение
      </label>
    </div>
    <div class="md:w-2/3">
      <textarea rows="8" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-400" id="inline-message" name="message" placeholder="Сообщение" required></textarea>
    </div>
  </div>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3"></div>
    <label class="md:w-2/3 block text-gray-500 font-bold">
      <input class="form-checkbox mr-2 leading-tight text-blue-400" type="checkbox" name="human" value="false" required>
      <span class="text-sm">
        Кликните, если Вы не робот
      </span>
    </label>
  </div>
  <div class="md:flex md:items-center">
    <div class="md:w-1/3"></div>
    <div class="md:w-2/3">
      <button class="shadow bg-blue-300 hover:bg-blue-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
        Отправить
      </button>
    </div>
  </div>
</form>

<div class="bg-gray-200 p-4 mb-4">

<div class="flex">
  <i class="fas fa-map-marker-alt fa-3x rounded-full mr-4 text-blue-300"></i>
  <div>
    <p class="text-gray-900 leading-none">SARL FRANCE ET MOI</p>
    <p class="text-gray-600">
    66 Avenue des Champs Élysées, 75008 Paris FRANCE
    </p>
  </div>
</div>

</div>

